&pinctrl {
        i2c0_default: i2c0_default {
              group1 {
                      psels = <NRF_PSEL(TWIM_SDA, 0, 21)>,
                              <NRF_PSEL(TWIM_SCL, 0, 23)>; //19 for the onboard
              };
           };

           i2c0_sleep: i2c0_sleep {
              group1 {
                      psels = <NRF_PSEL(TWIM_SDA, 0, 21)>,
                              <NRF_PSEL(TWIM_SCL, 0, 23)>; //19 for the onboard
                      low-power-enable;
              };
           };

           spi3_default: spi3_default {
           		group1 {
           			psels = <NRF_PSEL(SPIM_SCK, 0, 21)>,
           				<NRF_PSEL(SPIM_MOSI, 0, 23)>,
           				<NRF_PSEL(SPIM_MISO, 0, 19)>;
           		};
           	};

           	spi3_sleep: spi3_sleep {
           		group1 {
           			psels = <NRF_PSEL(SPIM_SCK, 0, 21)>,
                            <NRF_PSEL(SPIM_MOSI, 0, 23)>,
                            <NRF_PSEL(SPIM_MISO, 0, 19)>;
           			low-power-enable;
           		};
           	};
};
